<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="dar.games.music.capstonekote">

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme.Splash"
        tools:ignore="GoogleAppIndexingWarning">
        <receiver android:name="dar.games.music.capstonekote.KoteWidgetAppProvider">
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/widget_app_provider_info" />
        </receiver>

        <service android:name="dar.games.music.capstonekote.WidgetUpdateService" />

        <activity android:name="dar.games.music.capstonekote.ui.game.GamesActivity"
            android:screenOrientation = "portrait"
            />

        <meta-data
            android:name="com.google.android.gms.games.APP_ID"
            android:value="@string/app_id" />
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

        <activity android:name="dar.games.music.capstonekote.ui.login.LogInActivity"
            android:screenOrientation = "portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="dar.games.music.capstonekote.ui.mainmenu.MainActivity"
            android:screenOrientation = "portrait"/>
    </application>

</manifest>