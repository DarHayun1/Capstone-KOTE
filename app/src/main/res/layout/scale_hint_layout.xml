<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:elevation="@dimen/elevation_over_drawer"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:id="@+id/scales_window"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/scale_hor_margin"
        android:layout_marginEnd="@dimen/scale_hor_margin"
        android:background="@drawable/rounded_corners_layout"
        android:elevation="@dimen/elevation_over_drawer"
        android:orientation="vertical"
        android:padding="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/scale_viewpager"
            android:layout_width="match_parent"
            android:layout_height="120dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="6dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/note_num_1"
                style="@style/noteNameForScale"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="C" />

            <TextView
                android:id="@+id/note_num_2"
                style="@style/noteNameForScale"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="C" />

            <TextView
                android:id="@+id/note_num_3"
                style="@style/noteNameForScale"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="C" />

            <TextView
                android:id="@+id/note_num_4"
                style="@style/noteNameForScale"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="C" />

            <TextView
                android:id="@+id/note_num_5"
                style="@style/noteNameForScale"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="C" />

            <TextView
                android:id="@+id/note_num_6"
                style="@style/noteNameForScale"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="C" />

            <TextView
                android:id="@+id/note_num_7"
                style="@style/noteNameForScale"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="C" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/close_scales_iv"
        android:layout_width="@dimen/scale_hint_size"
        android:layout_height="@dimen/scale_hint_size"
        android:elevation="12dp"
        android:src="@drawable/red_x_btn"
        app:layout_constraintBottom_toTopOf="@id/scales_window"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/scales_window" />

</androidx.constraintlayout.widget.ConstraintLayout>
